load("@io_bazel_rules_docker//container:container.bzl", "container_image")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

pkg_tar(
    name = "tar",
    srcs = glob(["**/*.sql"]),
    mode = "0644",
    package_dir = "/migrations",
)

container_image(
    name = "image",
    base = "@migrate_docker//image",
    stamp = True,
    tars = [":tar"],
)
